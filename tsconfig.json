{
  "compilerOptions": {
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "target": "ES2022",
    "emitDeclarationOnly": true
  },
  "include": ["src"]
}
